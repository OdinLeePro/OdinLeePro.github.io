# This tells Ruby where to download gems from
source "https://rubygems.org"

# Main Jekyll gem - the core software that builds your site
gem "jekyll", "~> 4.3.0"

# Plugins group - these add extra features to your site
group :jekyll_plugins do
  gem "jekyll-sitemap"    # Creates sitemap.xml automatically
  gem "jekyll-seo-tag"    # Adds SEO meta tags to your pages
  gem "jemoji"           # Enables emoji support :smile:
end

# Platform-specific gems (for different operating systems)
# These help Jekyll work properly on Windows and other systems
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]
gem "wdm", "~> 0.1.1", platforms: [:mingw, :mswin, :x64_mingw]
